{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules":  {
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-console": "off",
    "semi": "warn",
    "comma-dangle": "warn",
    "no-multiple-empty-lines": "off",
    "react/prop-types": "off",
    "max-len": "off",
    "spaced-comment": "off",
    "jsx-quotes": ["warn","prefer-double"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-boolean-value": 0,
    "react/jsx-indent": "warn",
    "react/jsx-tag-spacing": 1,
    "import/first": 1,
  }
}
